pipeline {
    agent any
    
    environment {
    registry = "kammana/my-app:2.0.0"
    }
    
    stages {
        stage('Initialize'){
            def dockerHome = tool 'MyDocker'
            env.PATH = "${dockerHome}/bin:${env.PATH}"
        }
        
        stage ('Build Docker Image') {
            steps {
                script {
                    docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
    }
} 
