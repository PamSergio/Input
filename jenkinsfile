pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile'
        }
    }
    
    stages {
        stage ('Test') {
            agent {
                docker {
                    // Set both label and image
                    label 'docker'
                    image 'jenkins/jenkins:lts'
                    args '--name TryTest'
                }
            }
            steps {
                echo 'Run docker-compose file'
                sh 'docker ps -a'
            }
        }
    }
} 
