pipeline {
    agent any
    environment {
        def dockerHome = tool 'MyDocker'
        env.PATH = "${dockerHome}/bin:${env.PATH}"
    }
    
    stages {
        stage ('Test') {
            agent {
                docker {
                    // Set both label and image
                    label 'docker'
                    image 'jenkins/jenkins:lts'
                    args '--name TryTest'
                }
            }
            steps {
                echo 'Run docker-compose file'
                sh 'docker ps -a'
            }
        }
    }
} 
